{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Serilog": {
    "IncludeScopes": false,
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "WriteTo:Async": {
      "Name": "Async",
      "Args": {
        "configure": [
          {
            "Name": "File",
            "Args": {
              "path": "Logs/logs.txt",
              //"buffered": true,
              "flushToDiskInterval": "00:00:01",
              "rollingInterval": "Hour",
              "rollOnFileSizeLimit": true,
              "shared": true,
              "retainedFileCountLimit": 150,
              "fileSizeLimitBytes": 10000000
            }
          }
        ]
      }
    }
  },
  "Data": {
    "ConnectionString": "Server=000-000\\SQLEXPRESS2012;Database=MySomeTask;User Id=sa;Password=sa;"
  },
  "Registration": {
    "AllowedInterval": 5 //интервал в сек., через который разрешена регистрация с одного IP    
  },
  "Activation": {
    "AllowedIntervalInSeconds": 120 //интервал в сек., в течение которого требуется ввести код активации    
  },
  "NotificationsGateway": {
    "BaseUrl": ""
  },
  "Cache": {
    "Type": "InMemory", /*Redis*/
    "Redis": {
      "ConnectionString": "000.000.000.000"
    },
    "Locations": {
      "KeyPrefix": "Locations",
      "DurationInMinutes": 20
    }
  }
}
